	"description": "Start a credential issuance flow",
	"example": {},
	"attributes": {
		"openidEndpoint": {
			"type": "string"
		},
		"authenticationHeaderName": {
			"type": "string"
		},
		"authenticationToken": {
			"type": "string"
		},
		"credentialIssueTemplateKey": {
			"type": "string"
		},
		"credentialData": {
			"type": "string"
		},
		"formData": {
			"type": "string"
		},
		"sessionData": {
			"type": "string"
		},
	},
	"supports": {
		"color": {
			"background": false,
			"text": true
		},
		"html": false,
		"typography": {
			"fontSize": true
		}
	},
	"textdomain": "openid4vc-issue",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
